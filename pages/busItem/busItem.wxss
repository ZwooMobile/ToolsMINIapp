/* pages/busItem/bueItem.wxss */
page{
  background: #EDEDED;
}

.blank{
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: white;
}

.stop-png{
  width: 50rpx;
  height: 50rpx;
}

.stop-text{
  font-size: 32rpx;
}

.map-view{
  width: 100%;
  height: 360rpx;
  margin-top: 20rpx;
}

.item{
  width: 100%;
  height: 140rpx;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.bus-desc{
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.bus-code{
  color: #595959;
  font-size: 50rpx;
  font-weight: 600;
  margin-left: 30rpx;
}

.bus-tips{
  font-size: 30rpx;
  color: #696969;
}

.other{
  width: 270rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.other-tip{
  width: 100rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.operator{
  font-size: 32rpx;
  color: rebeccapurple;
}

.feature{
  width: 50rpx;
  height: 50rpx;
}

.time{
  width: 130rpx;
  height: 100%;
  background: black;
  border-top-left-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 8rpx;
}

.now{
  color: white;
  font-size: 55rpx;
  font-weight: 500;
  font-family: consolas;
}

.yellow{
  color: #FFB90F;
}

.red{
  color: #EE0000;
}

.next-wrapper{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: right;
  
}

.next{
  color: white;
  font-size: 26rpx;
}

.limit{
  width: 5%;
  height: 2rpx;
  background: white;
}

.bottom-blank{
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #696969;
}