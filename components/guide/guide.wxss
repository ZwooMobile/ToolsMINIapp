/* components/guide.wxss */
.tips-view{
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 99999;
  background: rgba(67, 67, 67, 0.8);
}

.tips-wrapper{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding:0 15rpx;
  box-sizing:border-box;
}

.up-arrow{
  width: 100rpx;
  height: 100rpx;
  margin-left:10rpx;
  margin-top:10rpx;
}

.box { 
  display: flex; 
  justify-content: flex-end; 
  align-items: flex-end; 
  flex-direction: column; 
  width: 600rpx; 
  margin-left:150rpx;
 } 
 .arrow { 
 width: 0; 
 height: 0; 
 margin-right: 120rpx; 
 border-width: 20rpx; 
 border-style: solid; 
 border-color: transparent transparent #34b5e2 transparent; 
 } 
 .body { 
 background-color: #34b5e2; 
 box-shadow: 0 10rpx 20rpx -10rpx #34b5e2; 
 border-radius: 12rpx; 
 display: flex; 
 align-items: center; 
 justify-content: center; 
 height: 84rpx; 
 padding: 0 20rpx; 
 margin-right: 40rpx; 
 } 
 .body > text { 
 color: #FFF; 
 font-size: 28rpx; 
 font-weight: 400; 
 } 

.tu{
  width: 0;
  height: 0;
  margin-left: 160rpx;
  border: solid 20rpx #34b5e2;
  border-color: transparent transparent #34b5e2 transparent; 
}

.right{
  margin-left: 130rpx;
}

.desc{
  display: inline-block;
  padding: 0 20rpx;
  line-height: 60rpx;
  color: #FFF; 
  font-size: 28rpx; 
  font-weight: 400;
  background: #34b5e2;
  border-radius: 12rpx; 
}

.know-btn{
  position: absolute;
  bottom: 200rpx;
  left: 20%;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 30rpx;
  border:solid 1px #fff;
  background: rgba(0, 0, 0, 0);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}