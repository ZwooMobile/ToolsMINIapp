/**index.wxss**/
page{
  background: #eee
}
.header{
  width:700rpx;
  background:#fff;
  border-radius: 15rpx;
  height:280rpx;
  padding:15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 25rpx;
}
.head_content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 45%;
}

.logo-png{
  width: 120rpx;
  height: 120rpx;
}

.toolBox{
  width:700rpx;
  background:#fff;
  border-radius: 15rpx;
  padding:15rpx;
  font-size: 25rpx;
  margin-top:20rpx;

}
.toolList{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-content: center;
  width: 100%;
  margin-top: 15rpx;
}
.tools{
  width:33.3%;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  padding-top: 15rpx;
  height: 180rpx;
  cursor: pointer;
  box-sizing: border-box;
  margin-right:-1px; 
  margin-bottom:-1px;
  border:1px solid #eee;
}

.cn-title{
  margin-top: 6rpx;
  font-size: 25rpx;
}

.en-title{
  font-size: 23rpx;
}

.bottom-line{
  background: #fff;
  width: 700rpx;
  border-radius: 15rpx;
  padding:30rpx 15rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-wrap: wrap;
}

.bottom-line:active{
  background: #878787;
}

.qa-text{
  font-size: 26rpx;
  color: #666666;
}

.blank{
  width: 100%;
  height: 60rpx;
}

.tips-view{
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 99999;
  background: rgba(67, 67, 67, 0.8);
}

.tips-wrapper{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding:0 15rpx;
  box-sizing:border-box;
}

.up-arrow{
  width: 100rpx;
  height: 100rpx;
  margin-left:10rpx;
  margin-top:10rpx;
}

.box { 
  display: flex; 
  justify-content: flex-end; 
  align-items: flex-end; 
  flex-direction: column; 
  width: 600rpx; 
  margin-left:150rpx;
 } 
 .arrow { 
 width: 0; 
 height: 0; 
 margin-right: 120rpx; 
 border-width: 20rpx; 
 border-style: solid; 
 border-color: transparent transparent #34b5e2 transparent; 
 } 
 .body { 
 background-color: #34b5e2; 
 box-shadow: 0 10rpx 20rpx -10rpx #34b5e2; 
 border-radius: 12rpx; 
 display: flex; 
 align-items: center; 
 justify-content: center; 
 height: 84rpx; 
 padding: 0 20rpx; 
 margin-right: 40rpx; 
 } 
 .body > text { 
 color: #FFF; 
 font-size: 28rpx; 
 font-weight: 400; 
 } 

.tu{
  width: 0;
  height: 0;
  margin-left: 24rpx;
  border: solid 20rpx #34b5e2;
  border-color: transparent transparent #34b5e2 transparent; 
}

.right{
  margin-left: 130rpx;
}

.desc{
  display: inline-block;
  padding: 0 20rpx;
  line-height: 60rpx;
  color: #FFF; 
  font-size: 28rpx; 
  font-weight: 400;
  background: #34b5e2;
  border-radius: 12rpx; 
}

.know-btn{
  position: absolute;
  bottom: 200rpx;
  left: 20%;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 30rpx;
  border:solid 1px #fff;
  background: rgba(0, 0, 0, 0);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}