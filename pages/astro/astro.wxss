page{
  height: 100% + 100px;
}

.bg{
  height: 100%;
  background: #F8F8FF;
}

.header{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}

.logo{
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.logo-png{
  width: 190rpx;
  height: 190rpx;
}

.logo-text{
  font-size: 38rpx;
  font-weight: 500;
  color: #6E6E6E;
}

.canvas{
  width: 100px;
  height: 125px;
}

.tab_list {
    height: 52px;
    background: #ccccff;
}

.tab_item {
    float: left;
    width: 20%;
    text-align: center;
}

.tab_item.active {
    color: #ffffff;
}

.tab_item_inner {
    width: 48px;
    height: 26px;
    font-size: 15px;
    line-height: 26px;
    text-align: center;
    margin: 13px auto;
    border-radius: 13px;
}

.tab_item.active .tab_item_inner {
    background: #6666ff;
}

.content{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.date-wrapper{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #6666ff;
}

.option{
  width: 100%;
  height: 80rpx;
  color: #666666;
  font-size: 32rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.option-title{
  color: #666666;
  font-size: 32rpx;
}

.option-ans{
  color: #6666ff;
}

.option-desc{
   width: 100%;
   display: flex;
   flex-direction: column;
   line-height: 80rpx;
}

.title-wrapper{
  height: 80rpx;
  line-height: 80rpx;

}

.desc{
  line-height: 42rpx;
  font-size: 30rpx;
  color: #6666ff;
}

.date{
  position: fixed;
  right: 0;
  top: 50%;
  background: rgba(100, 135, 255, 0.5);
  font-size: 30rpx;
  color: white;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 10rpx;
}

.birth{
  width: 32rpx;
  height: 32rpx;
  margin-top: 10rpx;
}

.tips-view{
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  background: #F8F8FF;
}

.tips-wrapper{
  position: absolute;
  width: 80%;
  top: 20%;
  left: 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tips-png{
  width: 250rpx;
  height: 250rpx;
}

.tips-text{
  font-size: 34rpx;
  font-weight: 500;
  color: #6666cc;
  margin-top: 30rpx;
  padding: 0 40rpx;
}

.tips-btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #6666cc;
  font-size: 30rpx;
  color: white;
  margin-top: 200rpx;
}

.footer{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.code{
  width: 200rpx;
  height: 200rpx;
}

.code-text{
  font-size: 30rpx;
  color: #6666ff;
  margin-top: 20rpx;
}

