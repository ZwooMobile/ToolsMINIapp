/* pages/bus/bus.wxss */
page{
  height: 100%;
}

.header{
  width: 100%;
  height: 120rpx;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search{
  width: 88%;
  height: 70rpx;
  background: #EDEDED;
  border-radius: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
}

.search-img{
  width: 40rpx;
  height: 40rpx;
}

.limit{
  width: 20rpx;
  height: 40rpx;
}

.search-input{
  flex-grow: 1;
  height: 40rpx;
  line-height: 40rpx;
}

.search-tip{
  color:  #8a8a8a;
  font-size: 30rpx;
}

.tips-wrapper{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
}

.title-text{
  font-size: 34rpx;
  color: #4F4F4F;
}

.list{
  width:100% 
}
.station{
  background:#eee;
  padding:25rpx;
}
.buses{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx;
  box-sizing: border-box;
}
.bus{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.time{
  background: rgb(53, 53, 53);
  color:#fff;
  padding: 25rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.code{
  font-size:30rpx;
  color :grey;
  margin-top: 20rpx;
}

.dis{
  display: flex;
  align-items: center;
}

.dis-png{
  width: 60rpx;
  height: 60rpx;
}

.dis-num{
  margin-left: 10rpx;
  font-size: 40rpx;
  color: #ff9d4d;
  font-family: consolas;
}

.loading{
  width: 100%;
  height: 100%;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.load-img{
  width: 100rpx;
  height: 100rpx;
}