/* pages/trafficImage/trafficImage.wxss */
.picker-wrapper{
  width:750rpx;
  height: 120rpx;
  background: #fff;
  position:fixed;
  top:0;
  z-index: 500;
  display: flex;
  flex-direction: column-reverse;
}

picker{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding:0 20rpx;
  border:1rpx solid black;
  box-sizing: border-box;
  font-family: consolas;
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
}

.time{
  position:relative;
  top:-570rpx;
  background:#000;
  padding:5rpx;
  color:white;
}

.item-wrapper{
  width:100%;
  display: flex;
  flex-direction: column;
}

.road{
  width: 100%;
  height: 80rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  color: #4F4F4F;
  font-family: consolas;
  font-weight: 500;
}